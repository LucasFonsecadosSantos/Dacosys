mixin box(title)
    if type == "question"
    else
        if title
            .box
                .box__title
                    h3= title
                .box__body
                    block
        else
            .box
                .box__body
                    block
    

mixin gridSystem(param,sm_param,md_param,lg_param,xl_param)
    div(class="col-" + param + " col-sm-" + sm_param + " col-md-" + md_param + " col-lg-" + lg_param + " col-xl-" + xl_param)
        block

